<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/list_tiem_bg"
    android:layout_height="60dp">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/magin_15"
            android:layout_marginRight="@dimen/magin_15"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_title"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/base_red_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_10"
                android:text="日期："/>
            <TextView
                android:id="@+id/tv_date"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/base_red_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_title"
                android:text="20170504"/>

            <TextView
                android:id="@+id/tv_money"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/base_red_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="10000"/>
            <TextView
                android:id="@+id/tv_money_label"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/base_red_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_money"
                android:text="金额："/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>