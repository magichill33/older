<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:nfu="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/activity_main_content_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#950101"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height">
        <com.nfu.old.view.ButtonExtendM
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/magin_32"
            android:layout_centerVertical="true"
            nfu:imgHeight = "@dimen/bottom_bar_icon"
            nfu:scType = "CENTER"
            nfu:iconDrawable="@drawable/bottom_bar_home_unselect"
            nfu:iconDrawablePress="@drawable/bottom_bar_home_selected"
            nfu:nfuTextColor = "@color/home_item_color"
            nfu:textColorPress="@color/base_red_color"
            nfu:nfuTextSize = "@dimen/text_size_12"
            nfu:buttonType="check"
            nfu:spacing="@dimen/padding_top_2"
            nfu:text="首页"
            nfu:drec="iconUp"
            />
        <com.nfu.old.view.ButtonExtendM
            android:id="@+id/btn_consult"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            nfu:imgHeight = "@dimen/bottom_bar_icon"
            nfu:scType = "CENTER"
            nfu:iconDrawable="@drawable/bottom_bar_consult_unselect"
            nfu:iconDrawablePress="@drawable/bottom_bar_consult_selected"
            nfu:nfuTextColor = "@color/home_item_color"
            nfu:textColorPress="@color/base_red_color"
            nfu:nfuTextSize = "@dimen/text_size_12"
            nfu:buttonType="check"
            nfu:spacing="@dimen/padding_top_2"
            nfu:text="咨询"
            nfu:drec="iconUp"
            />
        <com.nfu.old.view.ButtonExtendM
            android:id="@+id/btn_service"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/magin_32"
            android:layout_centerVertical="true"
            nfu:imgHeight = "@dimen/bottom_bar_icon"
            nfu:scType = "CENTER"
            nfu:iconDrawable="@drawable/bottom_bar_service_unselect"
            nfu:iconDrawablePress="@drawable/bottom_bar_service_selected"
            nfu:nfuTextColor = "@color/home_item_color"
            nfu:textColorPress="@color/base_red_color"
            nfu:nfuTextSize = "@dimen/text_size_12"
            nfu:buttonType="check"
            nfu:spacing="@dimen/padding_top_2"
            nfu:text="服务"
            nfu:drec="iconUp"
            />
