<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/magin_80"
    android:clickable="true"
    android:background="@color/list_tiem_bg"
    android:paddingTop="@dimen/padding_top_2">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/magin_15"
            android:layout_marginRight="@dimen/magin_15"
            >
            <!--<ImageView
                android:id="@+id/right_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/right_arrow"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->
            <View
                android:id="@+id/rl_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/base_red_color"
                android:layout_marginRight="@dimen/magin_10"
                android:layout_above="@id/rl_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content_color"
                android:textSize="@dimen/text_size_15"
                android:layout_alignLeft="@id/tv_title"
                android:layout_marginRight="@dimen/magin_10"
                android:layout_below="@id/rl_line"
                android:layout_centerVertical="true"
                android:text="电话："/>
           <!-- <TextView
                android:id="@+id/tv_fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content_color"
                android:textSize="@dimen/text_size_15"
                android:layout_alignLeft="@id/tv_phone"
                android:layout_toLeftOf="@id/right_arrow"
                android:layout_marginRight="@dimen/magin_10"
                android:layout_below="@id/tv_phone"
                android:layout_marginTop="5dp"
                android:text="传真："/>-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>