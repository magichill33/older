<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">
    <include
        android:id="@+id/title_bar"
        layout="@layout/fragment_title_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotline_top_height"
        android:background="@color/white"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/magin_30"
            android:layout_marginLeft="@dimen/magin_15"
            android:layout_marginRight="@dimen/magin_15"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/hotline_title"
                android:textColor="@color/base_red_color" />

            <TextView
                android:id="@+id/hotline_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1399129"
                android:textColor="@color/base_red_color" />

            <ImageView
                android:id="@+id/hotline_call"
                android:clickable="true"
                android:layout_width="@dimen/service_list_call_icon_width"
                android:layout_height="@dimen/service_list_call_icon_height"
                android:layout_marginLeft="20dp"
                android:src="@drawable/home_telphone_bg" />


        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/magin_8"
        android:layout_marginBottom="@dimen/magin_8"
        android:text="@string/hotline_center_title"
        android:textColor="@color/content_color"
        android:textSize="@dimen/text_size_24"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/magin_15"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content_color"
                android:textSize="@dimen/text_size_15"
                android:layout_marginTop="@dimen/magin_20"
                android:layout_marginLeft="@dimen/magin_20"
                android:text="1.XXXXXX \n 2.XXXXXXXX \n 3.XXXXXXXX \n 4.XXXXXXXXX"
                />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</LinearLayout>