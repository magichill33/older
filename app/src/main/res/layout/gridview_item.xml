<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="@dimen/gridview_item_width"
    android:layout_height="@dimen/gridview_item_height"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:orientation="vertical">
        <!--#
            android:background="@drawable/service_item_selector"
            android:descendantFocusability="blocksDescendants"
         android:duplicateParentState="true"-->
        <ImageView
            android:id="@+id/item_pic"
            android:layout_width="@dimen/gridview_item_pic_width"
            android:layout_height="@dimen/gridview_item_pic_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/magin_15"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/item_pic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/magin_15"
            android:gravity="center_horizontal"
            android:textColor="@color/base_red_color"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>
</android.support.v7.widget.CardView>
