<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/base_red_color"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/fragment_service_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:text="@string/top_bar_home_title"/>

        <ImageButton
            android:id="@+id/fragment_service_location_ib"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/service_top_bar_location_unselected"
            android:background="@color/transparent"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/ragment_service_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:text="@string/top_bar_home_title"/>
    </RelativeLayout>
</LinearLayout>