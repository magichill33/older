<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/title_bar"
        layout="@layout/fragment_title_bar" />
    <LinearLayout
        android:id="@+id/live_setting_groupname_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="130dp"
                android:layout_height="wrap_content"

                android:text="服务商名称"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView

                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="服务类型"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shopType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="XXXXXX"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/home_item_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shopManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="联系人电话"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shopTelephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="服务电话"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/servicePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="商业地址"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/businessAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="XXXXXX"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/home_item_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="商户编号"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shopNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="服务商所属区县"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shopCountryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="服务商所属街道"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shopStreetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shopCommunityName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="服务商所属社区"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shopCommunityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="XXXXXX"
                android:textColor="@color/home_item_color"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>


