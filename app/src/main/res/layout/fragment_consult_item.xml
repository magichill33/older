<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:gravity="center_vertical"
    android:background="@color/list_tiem_bg"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:clickable="true"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/consult_item_icon_iv"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"

                />

            <TextView
                android:id="@+id/consult_title_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/base_red_color"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/consult_go_ib"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/consult_jinru_bg" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>