<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/list_tiem_bg"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/consult_item"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/consult_item_icon_iv"
                android:layout_width="@dimen/consult_item_icon"
                android:layout_height="@dimen/consult_item_icon"
                android:layout_marginLeft="@dimen/magin_15"
                android:layout_marginTop="@dimen/magin_15"

                />

            <TextView
                android:id="@+id/consult_title_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/magin_20"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/base_red_color"
                android:textSize="@dimen/text_size_24" />

            <ImageView
                android:id="@+id/consult_go_ib"
                android:layout_width="@dimen/magin_15"
                android:layout_height="@dimen/magin_25"
                android:layout_marginRight="@dimen/magin_15"
                android:layout_marginTop="@dimen/magin_25"
                android:src="@drawable/consult_jinru_bg" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>