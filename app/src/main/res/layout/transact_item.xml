<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/iv_card"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:src="@drawable/qujidongtai"/>
    <TextView
        android:id="@+id/tv_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_card"
        android:layout_alignTop="@id/iv_card"
        android:layout_marginLeft="15dp"
        android:text="养老助残卡"
        android:textSize="18sp"
        android:textColor="@color/color_9d"/>
    <TextView
        android:id="@+id/tv_card1"
        android:layout_below="@id/tv_card_name"
        android:layout_alignLeft="@id/tv_card_name"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1、申报条件"
        android:textSize="12sp"
        android:textColor="@color/home_item_color"/>
    <TextView
        android:id="@+id/tv_card2"
        android:layout_below="@id/tv_card1"
        android:layout_alignLeft="@id/tv_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2、协理流程"
        android:textSize="12sp"
        android:textColor="@color/home_item_color"/>
    <TextView
        android:id="@+id/tv_card3"
        android:layout_below="@id/tv_card2"
        android:layout_alignLeft="@id/tv_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3、特别提醒"
        android:textSize="12sp"
        android:textColor="@color/home_item_color"/>
    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/iv_card_in"
        android:layout_marginRight="4dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow"/>
</RelativeLayout>